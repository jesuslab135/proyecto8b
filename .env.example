# Database Configuration
DATABASE_URL=postgresql://username:password@host:port/database

# Server Configuration
PORT=8000
NODE_ENV=production

# CORS Configuration
# Para proyecto escolar: permite cualquier origen (SOLO PARA DESARROLLO/TESTING)
ALLOW_ALL_ORIGINS=true

# Frontend URL principal para CORS (producción)
FRONTEND_URL=https://your-frontend-domain.com

# Orígenes adicionales permitidos (separados por comas)
# Ejemplo: https://app.ejemplo.com,https://admin.ejemplo.com,https://otro-dominio.com
ALLOWED_ORIGINS=https://app.ejemplo.com,https://admin.ejemplo.com

# JWT Configuration
JWT_SECRET=your-jwt-secret

# Email Configuration (if needed)
EMAIL_HOST=
EMAIL_PORT=
EMAIL_USER=
EMAIL_PASS=

# Logging
LOG_LEVEL=INFO
